    "prepare": "find .githooks -type f -exec ln -srf {} .git/hooks/ \\; || true",
    "prepublishOnly": "bun bundle"
  },
  "devDependencies": {
    "@adamhl8/configs": "^0.17.5",
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.2.4",
    "@types/bun": "^1.2.23",
    "knip": "^5.64.1",
    "markdown-toc": "^1.2.0",
    "publint": "^0.3.13",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2"
  }
}
